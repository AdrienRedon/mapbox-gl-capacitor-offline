<?xml version='1.0' encoding='utf-8'?>
<widget id="co.geomati.mapboxGLCordovaMbtiles" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mapbox GL Cordova MBTiles</name>
    <description>
        A custom mapbox-gl build that reads vector tiles from a local mbtiles file in cordova
    </description>
    <author email="oscar.fonts@geomati.co" href="http://geomati.co">
        Oscar Fonts
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="4.5.4" />
    <engine name="android" spec="6.4.0" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
    <plugin name="cordova-sqlite-ext" spec="0.10.5" />
    <plugin name="cordova-plugin-device" spec="1.1.6" />
    <plugin name="cordova-plugin-file" spec="6.0.1" />
</widget>
